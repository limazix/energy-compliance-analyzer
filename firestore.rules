rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que um usuário autenticado leia e escreva (incluindo criar, listar, obter, atualizar, excluir)
    // qualquer documento ou subcoleção dentro do seu próprio caminho /users/{userId}/.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
