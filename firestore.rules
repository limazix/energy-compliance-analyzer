
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuários só podem acessar seus próprios dados
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Regras mais específicas para a coleção 'analyses' dentro de cada usuário
    match /users/{userId}/analyses/{analysisId} {
      // Permitir que o proprietário crie, leia, atualize e exclua seus documentos de análise
      allow create, get, update, delete: if request.auth != null && request.auth.uid == userId;
      // Permitir que o proprietário liste suas análises
      allow list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
