rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows an authenticated user to read and write anything under their own user node.
    // This covers creating documents in the 'analyses' subcollection and reading/listing them.
    match /users/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}