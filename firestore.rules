rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- DEBUGGING RULE ---
    // This rule allows ANY authenticated user to create an analysis document for ANY userId.
    // This is for DEBUGGING `create` operations ONLY.
    // Revert to secure rules after testing.
    match /users/{userId}/analyses/{analysisDocId} {
      allow create: if request.auth != null;

      // Keep original rules for other operations on a specific document
      allow get, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for listing analyses for a user
    match /users/{userId}/analyses {
      allow list: if request.auth != null && request.auth.uid == userId;
    }
  }
}
