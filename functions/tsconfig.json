{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["../../src/*"] // Adjusted to point from functions/src to project_root/src
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "src/**/__tests__/*"]
}
