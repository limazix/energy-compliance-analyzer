
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false, // Ajustado para JS, pode ser mais flexível
    "noUnusedLocals": false,    // Ajustado para JS
    "outDir": "lib",            // Mantido, mas não usado ativamente pelo build
    "sourceMap": true,
    "strict": false,            // Ajustado para JS, menos rigoroso
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,            // Permite arquivos JS
    "checkJs": true,            // Habilita verificação de JS com // @ts-check
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "src/**/*.js",              // Inclui arquivos JS em src
    "../src/ai/prompt-configs/**/*.ts", // Permite referenciar .ts para tipos se necessário com JSDoc
    "../src/lib/**/*.ts"              // Permite referenciar .ts para tipos se necessário com JSDoc
  ],
  "exclude": [
    "node_modules",
    "lib"                       // Diretório de saída não deve ser incluído
  ]
}
