
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",                       // Output relative to tsconfig.json, so functions/lib
    "rootDir": "src",                      // Root of the functions source files is functions/src
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",                        // Base for path resolution is the functions/ directory
    "paths": {
      "@/*": ["../src/*"]                // Maps @/* to PROJECT_ROOT/src/*
    }
  },
  "include": [
    "src/**/*"                         // Include all files within functions/src/
  ],
  "exclude": [
    "node_modules",                    // Exclude functions/node_modules
    "lib"                              // Exclude functions/lib (output directory)
  ],
  "compileOnSave": true
}
