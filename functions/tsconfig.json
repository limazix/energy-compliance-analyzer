
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // Added to help with path resolution if needed later
    "paths": {
      // Example of how you could alias if direct relative paths become problematic
      // "@/src/*": ["../src/*"] 
    }
  },
  "compileOnSave": true,
  "include": [
    "src", // Default include for functions source
    "../src/ai/prompt-configs" // Allow importing from the shared prompt configurations
  ]
}
