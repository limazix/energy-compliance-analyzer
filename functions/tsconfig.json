
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",                       // O diretório de saída permanece functions/lib
    "rootDir": "..",                       // Define a raiz do projeto como rootDir (um nível acima de functions/)
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
    // "baseUrl": ".", // Não é estritamente necessário com rootDir ajustado
    // "paths": {} // Não é estritamente necessário com rootDir ajustado
  },
  "include": [
    "functions/src",                // Caminho relativo ao rootDir: PROJECT_ROOT/functions/src
    "src/ai/prompt-configs"         // Caminho relativo ao rootDir: PROJECT_ROOT/src/ai/prompt-configs
  ],
  "exclude": [
    "node_modules",                 // Exclui functions/node_modules
    "../node_modules",              // Exclui PROJECT_ROOT/node_modules
    "lib"                           // Exclui o próprio diretório de saída
  ],
  "compileOnSave": true
}

