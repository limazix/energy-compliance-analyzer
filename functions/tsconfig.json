
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib", 
    "sourceMap": true,
    "strict": false,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true, 
    "baseUrl": ".", 
    "paths": {
      "@/*": ["../src/*"] 
    }
  },
  "include": [
    "src/**/*.js" 
  ],
  "exclude": [
    "node_modules",
    "lib" 
  ]
}
