{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./lib/shared",
    "rootDir": "../src",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "allowJs": false
  },
  "include": [
    "../src/ai/prompt-configs/**/*.ts",
    "../src/lib/reportUtils.ts",
    "../src/lib/firebase-server-provider.ts",
    "../src/config/appConfig.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../src/ai/flows/**/*.ts",
    "../src/ai/genkit.ts",
    "../src/app",
    "../src/components",
    "../src/contexts",
    "../src/features",
    "../src/hooks"
  ]
}
