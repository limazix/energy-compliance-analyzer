
{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./lib/shared", // Output para os arquivos JS compartilhados
    "rootDir": "../src",     // Raiz dos arquivos TS compartilhados
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,    // N達o precisamos de .d.ts para os arquivos JS
    "sourceMap": false,      // N達o precisamos de source maps para os arquivos JS aqui
    "allowJs": false
  },
  "include": [
    "../src/ai/prompt-configs/**/*.ts",
    "../src/lib/reportUtils.ts"
  ],
  "exclude": [
    "node_modules",
    "../src/ai/flows/**/*.ts", // N達o compilar os fluxos do Next.js aqui
    "../src/ai/genkit.ts",     // N達o compilar o genkit do Next.js aqui
    "../src/app",
    "../src/components",
    "../src/contexts",
    "../src/features",
    "../src/hooks"
  ]
}
