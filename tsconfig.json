{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@functions/*": ["./functions/src/*"],
      "@lib/*": ["./src/lib/*"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/lib/**/*.ts", // Ensure src/lib is included for test imports
    "functions/src/**/*.ts", // Include TypeScript files from functions
    "tests/**/*.ts", // Include all TS files in the root tests folder
    "tests/**/*.tsx", // Include all TSX files in the root tests folder
    "tests/mocks/**/*.ts",
    "jest.config.js", // Keep jest.config.js if it's JS
    "jest.setup.ts",
    "*.config.js", // Keep other .config.js files
    "*.config.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "functions/lib", // Exclude compiled output of functions
    ".next",
    "dist",
    "build",
    "coverage",
    "out",
    "public"
  ]
}
