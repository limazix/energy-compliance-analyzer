rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow user to write to their own folder in user_uploads
    match /user_uploads/{userId}/{analysisId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // You might want to add read access if users need to download their own files directly
    // or if other services need to read them based on auth.
    // e.g., allow read: if request.auth != null && request.auth.uid == userId;
  }
}
